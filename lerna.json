{
  "version": "0.1.0",
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "services/*",
    "cli"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.test.ts",
        "*.spec.ts"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}