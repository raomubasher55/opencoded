PORT=4005
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
MONGODB_URI=mongodb://localhost:27017/opencode-tools

# Logging
LOG_LEVEL=info

# Cors
CORS_ORIGIN=*

# Tool execution settings
EXECUTION_TIMEOUT=30000  # 30 seconds
MAX_MEMORY_USAGE=512     # 512MB
MAX_EXECUTION_RETRIES=3

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600           # 1 hour in seconds

# Rate limiting
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX=100       # 100 requests per minute

# Enterprise features
ENTERPRISE_FEATURES_ENABLED=false